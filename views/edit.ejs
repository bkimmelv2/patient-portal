<%-include('../partials/head.ejs')%>

<h1>EDIT PATIENT DETAILS</h1>
<form action="/patients/<%=patient.id%>?_method=PUT" method="POST" class="patient-form">
    Patient Name (first and last): <input type="text" name="name" value="<%=patient.name%>"><br>
    Age: <input type="number" name="age" value="<%=patient.age%>"><br>
    Gender (not required): <input type="text" name="gender" value="<%=patient.gender%>"><br>
    Insurance?: <input type="checkbox" name="insurance"
        <%=patient.insurance ? 'checked' : 'unchecked'%>
    ><br><br>
    Vitals: <br><br>
        Temperature: <input type="number" name="vitals.temp" value="<%=patient.vitals.temp%>"><br>
        Heart rate: <input type="number" name="vitals.heartRate" value="<%=patient.vitals.heartRate%>"><br>
        Respiratory rate: <input type="number" name="vitals.respRate" value="<%=patient.vitals.respRate%>"><br>
        Blood pressure: <input type="text" name="vitals.bloodPressure" value="<%=patient.vitals.bloodPressure%>"><br>
        O2 Stat: <input type="number" name="vitals.oxygen" value="<%=patient.vitals.oxygen%>"><br><br>
    <input type="submit" value="Submit Changes" id="submit-btn">
</form>

